{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "use-sound": ["./node_modules/use-sound/"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/database/models/armorModel.ts", "src/database/models/artifactModel.ts", "src/database/models/bootModel.ts", "src/database/models/helmetModel.ts", "src/database/models/ingredientModel.ts", "src/database/models/ringModel.ts", "src/database/models/shieldModel.ts", "src/database/models/weaponModel.ts"],
  "exclude": ["node_modules"]
}
